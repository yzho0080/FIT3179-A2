{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
   "width": "400",
  "height": "300",
  "title": "Urbanization rate vs GDP per capita",
  "data": {
    "url": "https://raw.githubusercontent.com/yzho0080/FIT3179/master/World%20data/world%20data%20with%20continent%20AND%20population.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 300000000,
        "step": 10,
        "name": "Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.Population > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per capita",
      "axis": {"tickCount": 3},
      "scale": {"type": "log", "domain": [1, 1000000]}
    },
    "y": {
      "field": "Urbanization_rate",
      "type": "quantitative",
      "title": "Urbanization_rate",
      "axis": {"tickCount": 10},
      "scale": {"type": "", "domain": [1, 100]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "GDP_per_capita", "type": "quantitative", "format": ","},
          {"field": "Urbanization_rate", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Continent", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia'  || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'||datum['Country'] == 'Guyana' ",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "GDP_per_capita", "type": "quantitative", "format": ","},
          {"field": "Life_expectancy", "type": "quantitative", "format": ","},
          {"field": "Population", "type": "quantitative", "format": ","},
          {"field": "Continent", "type": "nominal"}
        ]
      }
    }
  ],
  "config": {}
}
